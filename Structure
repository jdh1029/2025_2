#include <stdio.h>
#include <string.h>

typedef struct {
    int id;
    char name[20];
    double score;
} Student;

void displayStudent(Student s) {
    printf("ID: %d\n", s.id);
    printf("Name: %s\n", s.name);
    printf("Score: %.2lf\n", s.score);
}

int main() {
    Student student1 = {101, "Kim Jisu", 95.5};

    printf("--- Student 1 Information ---\n");
    displayStudent(student1);

    Student student2;
    student2.id = 102;
    strcpy(student2.name, "Lee Minho");
    student2.score = 88.0;

    student2.score += 2.5;

    printf("\n--- Student 2 Information ---\n");
    displayStudent(student2);

    Student class_list[3];
    class_list[0] = student1;
    class_list[1] = student2;
    class_list[2].id = 103;
    strcpy(class_list[2].name, "Park Sora");
    class_list[2].score = 79.2;

    printf("\n--- Class List ---\n");
    for (int i = 0; i < 3; i++) {
        printf("Student %d:\n", i + 1);
        displayStudent(class_list[i]);
        printf("------\n");
    }

    return 0;
}
